<main>
  <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
      <div class="page-header-content pt-4">
        <div class="row align-items-center justify-content-between">
          <div class="col-auto mt-4">
            <h1 class="page-header-title">
              <div class="page-header-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-filter">
                  <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon></svg>
              </div>
              Cadastrar Balancetes
            </h1>
            <div class="page-header-subtitle">Cadastro de Balancetes</div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="container-xl px-4 mt-n10">
    <div class="card mb-4">
      <div class="card-header">Formulário de Cadastrar</div>
        <div class="card-body">
          <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
            <div class="dataTable-top">
              <div class="dataTable-dropdown">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <div class="col-lg-12">
                  <%= simple_form_for([:backoffice, @balancesheet]) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-inputs">
                      <%= f.input :number, value:"Número" %>
                      <%= f.input :date %>
                      <%= f.input :resume %>
                      <%= f.label 'Enviar' %>
                    
                    </div>
                    <div class="form-actions">
                      <%= f.button :submit, class:"btn btn-primary", value:"salvar" %>
                    </div>
                  <% end %>
                </div>
              </table>
                <div class="form-inputs">
                </div>

                <thead>
                  <tr></tr>
                  <div class="card-body">
                    <div class="sbp-preview">
                      <div class="sbp-preview-content">
                        <form>
                        </form>
                      </div>
                    </div>
                  </div>
                </thead>                    
                <tbody>
                  <tr>
                    <td></td>
                  </tr>
                </tbody>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</main>
