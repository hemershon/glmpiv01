<div class="container-fluid">

  <h1 class="h3 mb-2 text-gray-800">Balancetes</h1>
  <% if @balancesheet.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
    <ul>
     <% @balancesheet.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
    <p class="mb-4">Balancetes da Grande Loja Maçônica do Piauí.</p>
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary"><%= action %>
          <%= link_to backoffice_balancesheets_path, class:"btn btn-success btn-circle btn-sm", style:"margin-top: -5px" do %>
            <i class="fas fa-plus"></i>
            <% end %>
          </h6>
          </div>
          <div class="card-body">
            <div class="table-responsive"></div>
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <div class="col-lg-12">
                  <%= simple_form_for([:backoffice, @balancesheet]) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-inputs">
                      <%= f.input :number, value:"Número" %>
                      <%= f.input :date %>
                      <%= f.input :resume %>
                      <%= f.label 'Enviar' %>
                      <%= f.file_field :balancheetpdf%>
                    </div>
                    <div class="form-actions">
                      <%= f.button :submit, class:"btn btn-primary", value:"salvar" %>
                    </div>
                  <% end %>
                </div>
              </table>
            </div>
          </div>
        </div>
      </div>
